<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.etf.unsa.ba.zavrsnirad_esiljak1.LoginFragment"
    android:background="#1c1c1a">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/soy_regular"
        android:text="Login to continue"
        android:textColor="@color/black"
        android:textSize="18pt"
        android:textStyle="bold"
        android:paddingTop="60dp"
        android:paddingStart="10dp"
        android:layout_gravity="top|center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:fontFamily="@font/soy_regular"
        android:textAlignment="center"
        android:text="In order to use this\n app you need to\n
sign in with google.\n\n Please do so by clicking\n
the button below."
        android:textColor="@color/white"
        android:textSize="16pt"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/login_btn"
        android:layout_width="237dp"
        android:layout_height="76dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="25dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/login_img" />

</FrameLayout>